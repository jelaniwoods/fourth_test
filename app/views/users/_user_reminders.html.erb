<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reminders

    <a data-toggle="collapse" href="#user_reminders_new_form">
      Add reminder
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.reminders.each do |reminder| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to reminder, reminder_path(reminder) %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_reminders_new_form">
        <%= render partial: "users/user_reminders_new_form" %>
      </div>
    </div>

  </ul>
</div>
